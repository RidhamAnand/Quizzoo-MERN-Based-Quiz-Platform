<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QUIZZO</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="css\styles.css">
</head>

<style>
    body{
    background-color:#6A5AE0;
    margin: 0;
    padding: 0;
    overflow-x: hidden;

}
#header{
    text-align: center;
    padding: 2% 10%;
    text-transform: uppercase;
    color: rgb(252, 252, 252);
    font-family:Arial, Helvetica, sans-serif !important;
    font-weight: 900;
    letter-spacing: 20;
    background-color: #3b3188;
    margin: 0;
    border-bottom-left-radius: 40px;
    border-bottom-right-radius: 40px;
    box-shadow: rgba(10, 10, 19, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;


}

input[type=radio]{
    width: 25px;
    height: 25px;
    margin-top: 20px;

}

#header h1{
    font-family: Arial, Helvetica, sans-serif;
    font-size: 4rem;
}

li{
    font-size: 1.4em;
    margin: 8px;
}

#quest-ans{
    margin: 20px;
    padding: 2% 10%;
    color: white;
}

.answers{
    font-family: Arial, Helvetica, sans-serif;
    font-size: 2rem;
}

.question{
    background-color: white;
    padding: 20px 20px;
    color: black;
    border-radius: 25px;
    margin-bottom: 20px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
}


.question h1{
    font-size: 2rem;
    font-family:Arial, Helvetica, sans-serif;
    font-weight: normal;
    margin-left: 20px;
    
}

#nextButton{
    background-color: white;
    border: none;
    font-size: 1.5rem;
    margin-top: 30px;
    border-radius: 5px;
    padding: 10px 25px;
    cursor: pointer;
    transition: .3s ;
}
#nextButton:hover{
    background-color: rgb(70, 70, 70);
    color: white;
}

/* score area */
.score-area{
    text-align: center;
    padding: 40px;
    background-color:#3b3188;
    color: rgb(255, 255, 255) !important;
    border-bottom-left-radius: 40px;
    border-bottom-right-radius: 40px;
    margin-bottom: 20px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
}

.row{
    padding: 3% 10%;
    text-align: center;
    overflow: hidden !important;
}

.detail-row .col-lg-4{
   
    background-color: white;
    padding: 30px;
    margin: 10px;
    border-radius: 25px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    
    
   


}

h3{
    margin-top: 10px !important;
}

#wrongQuest{
    font-size: 2rem;
    color: rgb(5, 5, 5);
    font-weight: bolder;
    margin: 20px;
}

/* main page */
.main{
    text-align: center;
    font-family:Arial, Helvetica, sans-serif;
    margin: 20px;
    
}
.main h1{
    font-size: 3rem;
    background-color: white;
    padding: 20px 30px;
    border-radius: 20px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    
}


.login-col{
   background-color: white;
    color: rgb(0, 0, 0);
    margin: 20px;
    padding: 50px 40px;
    border-radius: 20px;
    box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
}
.login-col .btn{
    margin-top: 20px;
    font-size: 1em;
}

/* form containers */
.form-container{
    display: flex;
  align-items: center;
  justify-content: center;
  margin: 30px;

}

/* Teacher Login */
.teacher-login{
    background-color: white;
    padding: 30px 60px;
    text-align: center;
    border-radius: 20px;
    box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
    /* width: 50%; */
}


.teacher-login input{
    width: 100%;
    font-size: 16px;
    padding: 20px;
    border-radius: 20px;
    transition: 0.3s;
    border: none;
    box-shadow: rgba(6, 24, 44, 0.4) 0px 0px 0px 2px, rgba(6, 24, 44, 0.65) 0px 4px 6px -1px, rgba(255, 255, 255, 0.08) 0px 1px 0px inset;
}

.teacher-login input:focus{
    transform: scale(1.1);
    border: none;
}




.stu-form{
    background-color: white;
   
    padding: 50px 40px 50px 40px;
    margin-top: 30px;
    box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;

   
}
.form-outline input{
    padding: 30px !important;
}
.form-outline input:focus{
    border: 2px black solid !important;
}
</style>
<body>
    <section id="header">
        <h1>Quizzoo</h1>
    </section>

    <section id="quest-ans">
        
            <div class="question">
                <h1><%=quest%></h1>
            </div>
            <div class="answers">
            <form action="next" method="POST">
                <% for (var i=0; i < options.length; i++) { %>
                <input type="radio" id="1" name="value" value = "<%=options[i]%>" required>
                  <label for="1"><%=options[i]%></label><br>
                <%}%> 
            <button id="nextButton" type="submit"><%=buttonText%></button>
            </form>

            </div>
         

    </section>
    <%- include('footer'); -%>
</body>

</html>
