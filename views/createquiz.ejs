<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzoo : Quiz Creation</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="css\styles.css">

</head>
<body>
    <div class="form-container" style="flex-direction: column;">
   
    <form action="/createquiz" method="POST" class="teacher-login"> 
        <h2 style="text-transform: uppercase;font-weight: 800;">Welcome</h2>
        <h4 style="margin-bottom: 20px;color: red;">!!! Keep Correct Option on Top !!!</h4>

        <input type="text" placeholder="Question" style="background-color: yellow;" size="100" name="quest"> <br> <br>
        <input type="text" placeholder="Option 1" style="background-color: greenyellow;"  size="80" name="opt1"><br> <br>
        <input type="text" placeholder="Option 2"  size="80"  name="opt2"><br> <br>
        <input type="text" placeholder="Option 3"  size="80" name="opt3" ><br> <br>
        <input type="text" placeholder="Option 4"  size="80" name="opt4" ><br> <br>
        
       <button type="submit" class="btn btn-lg btn-success btn-block"> Add this Question</button> 
       
    </form>
    <form action="/quiz_complete" method="POST">
        <br> <button type="submit" class="btn btn-lg btn-warning btn-block">Complete Quiz</button>
      </form>  <br>
   
       
   
    </div>
    <%- include('footer'); -%>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
    
</html>